<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:background="@color/darker_gray"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:paddingBottom="15dp"
        android:text="COLOR MASTER"
        android:textColor="@android:color/black"
        android:textSize="45sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageButton
            android:id="@+id/level_chooser_btn_play"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/play_black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|top"
        android:paddingTop="15dp">

        <ImageButton
            android:id="@+id/level_chooser_btn_share"
            style="@style/OptionImageButton"
            android:src="@drawable/share" />

        <ImageButton
            android:id="@+id/level_chooser_btn_markapp"
            style="@style/OptionImageButton"
            android:src="@drawable/star_black" />

        <ImageButton
            android:id="@+id/level_chooser_btn_difficalty"
            style="@style/OptionImageButton"
            android:src="@drawable/game_difficalty_1" />

        <ImageButton
            android:id="@+id/level_chooser_btn_help"
            style="@style/OptionImageButton"
            android:src="@drawable/help_black" />

        <ImageButton
            android:id="@+id/level_chooser_btn_leaderboard"
            style="@style/OptionImageButton"
            android:src="@drawable/leaderboard_black" />

    </LinearLayout>

</LinearLayout>